<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bodyQuiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFACD"
    tools:context=".BodyQuiz">

    <!-- Header: Back Button -->
    <ImageView
        android:id="@+id/btnBackBodyQuiz"
        android:layout_width="48dp"
        android:layout_height="33dp"
        android:layout_margin="16dp"
        android:onClick="goBack"
        android:src="@drawable/buttonback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvBodyQuizTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Parts of the Body"
        android:textColor="#020202"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Question Container -->
    <LinearLayout
        android:id="@+id/questionContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvBodyQuizTitle"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavBarAnimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Question Text -->
        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which part of body helps us see?"
            android:textSize="22sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Option Buttons Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Option 1 Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOption1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FFEE99"
                app:strokeColor="#FFD54F"
                app:strokeWidth="2dp">

                <ImageButton
                    android:id="@+id/option1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ear"
                    android:contentDescription="Option 1"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Option 2 Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOption2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FFEE99"
                app:strokeColor="#FFD54F"
                app:strokeWidth="2dp">

                <ImageButton
                    android:id="@+id/option2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/eye"
                    android:contentDescription="Option 2"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Option Buttons Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Option 3 Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOption3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FFEE99"
                app:strokeColor="#FFD54F"
                app:strokeWidth="2dp">

                <ImageButton
                    android:id="@+id/option3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/nose"
                    android:contentDescription="Option 3"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Option 4 Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOption4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FFEE99"
                app:strokeColor="#FFD54F"
                app:strokeWidth="2dp">

                <ImageButton
                    android:id="@+id/option4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/hand"
                    android:contentDescription="Option 4"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="135dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:text="SUBMIT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:backgroundTint="#FFC107"/>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBarAnimal"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFEB80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navProfileAnimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/usernav"
            android:contentDescription="Profile"/>

        <ImageView
            android:id="@+id/navLessonsAnimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/booknav"
            android:contentDescription="Lessons"/>

        <ImageView
            android:id="@+id/navHomeAnimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/homenav"
            android:contentDescription="Home"/>

        <ImageView
            android:id="@+id/navQuizAnimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/quiznav"
            android:contentDescription="Quiz"/>

        <ImageView
            android:id="@+id/navScoresAnimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/trophynav"
            android:contentDescription="Scores"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
