<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF7C2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="16dp">

        <!-- Back button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="33dp"
            android:layout_margin="10dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/buttonback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="goBack"/>

        <!-- Title -->
        <TextView
            android:id="@+id/textViewAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Lesson"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Subject -->
        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Subject"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textViewAdd"
            app:layout_constraintStart_toStartOf="parent"/>

        <Spinner
            android:id="@+id/spinnerSubject"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubject"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Lesson Title -->
        <TextView
            android:id="@+id/tvLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson Title"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerSubject"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etLessonTitle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Type lesson title"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvLesson"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Years -->
        <TextView
            android:id="@+id/tvYears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Years"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etLessonTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etYears"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Example: Year 1"
            android:inputType="text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvYears"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etYears"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:hint="This lesson is about..."
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Header Image -->
        <TextView
            android:id="@+id/tvImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Header Image"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etDescription"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnUploadIllustration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Image"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvImage"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Video -->
        <TextView
            android:id="@+id/tvVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video URL"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnUploadIllustration"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etVideoUrl"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Paste video URL"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvVideo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnBrowse"/>

        <Button
            android:id="@+id/btnBrowse"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Browse"
            app:layout_constraintTop_toTopOf="@id/etVideoUrl"
            app:layout_constraintBottom_toBottomOf="@id/etVideoUrl"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save &amp; Publish"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/etVideoUrl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
