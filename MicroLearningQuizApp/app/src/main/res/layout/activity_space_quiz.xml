<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFACD"
    tools:context=".SpaceQuiz">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBackSpaceQuiz"
        android:layout_width="48dp"
        android:layout_height="33dp"
        android:layout_margin="16dp"
        android:onClick="goBack"
        android:src="@drawable/buttonback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvSpaceQuizTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Sun, Moon &amp; Stars"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#020202"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Question Container -->
    <LinearLayout
        android:id="@+id/questionContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSpaceQuizTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBarSpace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Question -->
        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Sun shines at night."
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Radio Group -->
        <RadioGroup
            android:id="@+id/radioGroupTF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="60dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="True"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"/>

            <RadioButton
                android:id="@+id/radioFalse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="False"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#C62828"/>
        </RadioGroup>

        <!-- Submit -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_marginTop="32dp"
            android:text="NEXT"
            android:textStyle="bold"
            android:backgroundTint="#FFC107" />

    </LinearLayout>

    <!-- Bottom Nav -->
    <LinearLayout
        android:id="@+id/bottomNavBarSpace"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFEB80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- icons same as before -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
