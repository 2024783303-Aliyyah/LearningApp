<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multiplyquiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFACD">

    <!-- Header: Back Button and Title -->
    <ImageView
        android:id="@+id/btnBackMultiply"
        android:layout_width="48dp"
        android:layout_height="33dp"
        android:layout_margin="16dp"
        android:onClick="goBack"
        android:src="@drawable/buttonback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMultiplyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Multiply It!"
        android:textColor="#020202"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavBarMultiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMultiplyTitle">

        <!-- Question 1 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/multiplyq1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFEE99"
            app:cardCornerRadius="20dp"
            app:strokeColor="#FFD54F"
            app:strokeWidth="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/multiply_image_1"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="24dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/multiply1" />

                <EditText
                    android:id="@+id/multiply_input_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/answbox"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="22sp" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Question 2 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/multiplyq2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFEE99"
            app:cardCornerRadius="20dp"
            app:strokeColor="#FFD54F"
            app:strokeWidth="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/multiply_image_2"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="24dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/multiply2" />

                <EditText
                    android:id="@+id/multiply_input_2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/answbox"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="22sp" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Question 3 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/multiplyq3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFEE99"
            app:cardCornerRadius="20dp"
            app:strokeColor="#FFD54F"
            app:strokeWidth="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/multiply_image_3"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="24dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/multiply3" />

                <EditText
                    android:id="@+id/multiply_input_3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/answbox"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="22sp" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Question 4 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/multiplyq4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFEE99"
            app:cardCornerRadius="20dp"
            app:strokeColor="#FFD54F"
            app:strokeWidth="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/multiply_image_4"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="24dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/multiply4" />

                <EditText
                    android:id="@+id/multiply_input_4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/answbox"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textSize="22sp" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/finishMultiply"
            android:layout_width="135dp"
            android:layout_height="44dp"
            android:backgroundTint="#FFC107"
            android:text="FINISH"
            android:textColor="#3E2723"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBarMultiply"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#FFEB80"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/navProfileMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Profile"
            android:padding="10dp"
            android:src="@drawable/usernav"
            android:onClick="openMenu"/>
        <ImageView
            android:id="@+id/navLessonsMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Lessons"
            android:padding="10dp"
            android:src="@drawable/booknav"
            android:onClick="openMenu"/>
        <ImageView
            android:id="@+id/navHomeMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:padding="10dp"
            android:src="@drawable/homenav"
            android:onClick="openMenu"/>
        <ImageView
            android:id="@+id/navQuizMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Quiz"
            android:padding="10dp"
            android:src="@drawable/quiznav"
            android:onClick="openMenu"/>
        <ImageView
            android:id="@+id/navScoresMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Scores"
            android:padding="10dp"
            android:src="@drawable/trophynav"
            android:onClick="openMenu"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
