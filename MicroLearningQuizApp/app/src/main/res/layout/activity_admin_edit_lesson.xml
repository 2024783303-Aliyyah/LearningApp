<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7C2"
    tools:context=".adminEditLesson">

    <!-- =========== KANDUNGAN YANG BOLEH DIGULIR (SCROLLABLE CONTENT) =========== -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Back button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="33dp"
                android:src="@drawable/buttonback"
                android:onClick="goBack"
                android:contentDescription="Back Button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/textViewEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Lesson"
                android:textColor="#000000"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Subject -->
            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Select Subject"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewEdit" />

            <Spinner
                android:id="@+id/spinnerSubject"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvSubject"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Lesson Title -->
            <TextView
                android:id="@+id/tvLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Lesson Title"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinnerSubject" />

            <EditText
                android:id="@+id/etLessonTitle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:hint="Type lesson title"
                android:textColor="#3F51B5"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvLesson"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Years -->
            <TextView
                android:id="@+id/tvYears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Years"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etLessonTitle" />

            <EditText
                android:id="@+id/etYears"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:hint="Example: Year 1"
                android:inputType="text"
                android:textColor="#3F51B5"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvYears"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Description"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etYears" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:gravity="top"
                android:hint="This lesson is about..."
                android:inputType="textMultiLine"
                android:textColor="#3F51B5"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Header Image -->
            <TextView
                android:id="@+id/tvImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Header Image"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etDescription" />

            <Button
                android:id="@+id/btnUploadIllustration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Image"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvImage"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Video -->
            <TextView
                android:id="@+id/tvVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Lesson Video"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnUploadIllustration" />

            <Button
                android:id="@+id/btnPickVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Video"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvVideo"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvSelectedVideo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No video selected"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/btnPickVideo"
                app:layout_constraintBottom_toBottomOf="@id/btnPickVideo"
                app:layout_constraintStart_toEndOf="@id/btnPickVideo"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Action Button -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/btnPickVideo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- =========== BAR NAVIGASI BAWAH (KEKAL DI BAWAH) =========== -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#FFEB80"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Ikon-ikon navigasi anda -->
        <ImageView
            android:id="@+id/adminnavProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Profile"
            android:onClick="openAdminActivity"
            android:padding="10dp"
            android:src="@drawable/usernav" />

        <ImageView
            android:id="@+id/adminnavHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:onClick="openAdminActivity"
            android:padding="10dp"
            android:src="@drawable/homenav" />

        <ImageView
            android:id="@+id/adminnavScores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Scores"
            android:onClick="openAdminActivity"
            android:padding="10dp"
            android:src="@drawable/trophynav" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
