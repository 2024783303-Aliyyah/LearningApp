<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Micro Learning Quiz App</string>
    <style name="Theme.MicroLearningQuizApp" parent="Theme.Material3.DayNight.NoActionBar">
        
        
    </style>
    <style name="Theme.MicroLearningQuizApp.Splash" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">#FFF7C2</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.MicroLearningQuizApp</item>
    </style>
    <style name="WordMatchingBox" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">#F0D9B5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>