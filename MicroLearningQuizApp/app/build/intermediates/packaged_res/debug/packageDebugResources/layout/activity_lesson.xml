<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lessonactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFACD"
    tools:context=".lessonActivity">

    <!-- =========== FIXED HEADER (OUTSIDE SCROLLVIEW) =========== -->

    <ImageView
        android:id="@+id/btnBack2"
        android:layout_width="48dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="goBack"
        android:src="@drawable/buttonback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Back Button"/>

    <TextView
        android:id="@+id/textSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Subject"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack2" />


    <!-- =========== SCROLLABLE CONTENT =========== -->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSubject">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Text content (Title, Year, etc.) remains the same -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Lesson Title"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Year"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="Lesson Content"
                android:textColor="#000000"
                android:textSize="20sp" />

            <!-- ===== KOD UNTUK HEADER IMAGE DITAMBAH DI SINI ===== -->
            <!-- ======================================================= -->

            <!-- Video remains inside its FrameLayout -->
            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="90dp"
                android:contentDescription="Lesson Header Image"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:src="@tools:sample/backgrounds/scenic"
                tools:visibility="visible" />

            <FrameLayout
                android:id="@+id/videoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>


    <!-- =========== FIXED FOOTER (UNCHANGED) =========== -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#FFEB80"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Navigation Buttons ... -->
        <!-- ... (kod ikon navigasi anda kekal di sini) ... -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
